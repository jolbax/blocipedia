<!DOCTYPE html>
<html>

<head>
  <% include ../static/partials/head.ejs %>
</head>

<body>

  <% include ../static/partials/navbar.ejs %>


  <main class="container">
    <% include ../static/partials/messages.ejs %>
    <div class="row">
      <div class="col-md-6 mx-auto pb-3 pt-3 border">
        <h3>Create your account</h3>
        <form method="POST" action="/users/create">
          <div class="form-group">
            <label>User name:</label>
            <input type="text" name="username" placeholder="Enter Name" class="form-control" />
            <small class="text-muted" id="emailHelp">username must be at least 3 char long</small>
          </div>
          <div class="form-group">
            <label>Email:</label>
            <input type="email" name="email" placeholder="Enter Email" class="form-control" />
            <small class="text-muted" id="emailHelp">email address must be a valid address</small>
          </div>
          <div class="form-group">
            <label>Password:</label>
            <input type="password" name="password" placeholder="Enter Password" class="form-control" />
            <small class="text-muted" id="passwordHelp">password must be at least 6 char long</small>
          </div>
          <div class="form-group">
            <label>Repeat password:</label>
            <input type="password" name="passwordConfirmation" placeholder="Enter Password confirmation" class="form-control" />
            <small class="text-muted" id="passwordHelp">confirmation must match password above</small>
          </div><br />
          <input type="submit" value="Sign Up" class="btn btn-outline-dark" />
        </form>
      </div>
    </div>
  </main>

  <% include ../static/partials/baseScripts.ejs %>

</body>

</html>